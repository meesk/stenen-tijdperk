package domainlayer;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

public class Speler {
	
	private Spel spel;
	private List<Stamlid> stamleden;
	private Map<MiddelEnum, Integer> middelen;
	
	public Speler(Spel spel) {
		this.spel = spel;
		stamleden = new ArrayList<>();
		middelen = new HashMap<>();
		middelen.put(MiddelEnum.VOEDSEL, 0);
		middelen.put(MiddelEnum.HOUT, 0);
		middelen.put(MiddelEnum.LEEM, 0);
		middelen.put(MiddelEnum.STEEN, 0);
		middelen.put(MiddelEnum.GOUD, 0);
	}
	
	public void ontvangStamlid(Stamlid stamlid) {
		stamleden.add(stamlid);
	}
	
	public void gebruikStamlid(Stamlid stamlid) {
		stamleden.remove(stamlid);
	}
	
	public Spel getSpel() {
		return spel;
	}

	public void ontvangMiddelen(MiddelEnum middel, int aantal) {
		middelen.put(key, map.get(key) + 1);
	}
	
}
